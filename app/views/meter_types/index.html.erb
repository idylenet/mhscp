<h1>Listing meter_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Class</th>
  </tr>

<% for meter_type in @meter_types %>
  <tr>
    <td><%=h meter_type.name %></td>
    <td><%=h meter_type.desc %></td>
    <td><%=h meter_type.class %></td>
    <td><%= link_to 'Show', meter_type %></td>
    <td><%= link_to 'Edit', edit_meter_type_path(meter_type) %></td>
    <td><%= link_to 'Destroy', meter_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

